# Example .env file for Trading Simulator
# Copy this to .env and fill in your actual values

# ============================================
# CRITICAL: SECRET KEY (REQUIRED)
# ============================================
# Generate a secure random key:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-generate-using-secrets-module

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./trading.db

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8080/auth/callback
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_USERINFO_URI=https://www.googleapis.com/oauth2/v1/userinfo

# ============================================
# UPSTOX API
# ============================================
UPSTOX_API_KEY=your-upstox-api-key
UPSTOX_API_SECRET=your-upstox-api-secret
UPSTOX_REDIRECT_URI=http://localhost:8080/connect-broker

# ============================================
# REDIS (Optional - for paper trading)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Uncomment if Redis has password
